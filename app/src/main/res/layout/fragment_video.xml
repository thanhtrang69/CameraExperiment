<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.trang.cameraexperiment.camera.CameraVideo
        android:id="@+id/preview_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/img_btflash_on_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="#00000000"
            android:src="@drawable/ic_flash_on" />

        <ImageButton
            android:id="@+id/img_btflash_off_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="#00000000"
            android:src="@drawable/ic_flash_off"
            android:visibility="gone" />
    </TableRow>


    <ImageButton
        android:id="@+id/take_photo_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="#00000000"
        android:src="@mipmap/takephoto" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/play_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:visibility="gone"
            android:src="@mipmap/videocamera" />

        <ImageButton
            android:id="@+id/stop_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:src="@mipmap/stop_video"
          />

    </TableRow>


    <ImageButton
        android:id="@+id/take_ablum_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:background="#00000000"
        android:src="@mipmap/album" />
</RelativeLayout>